        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/setting1_left"
                android:layout_width="45dp"
                android:layout_height="58dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_left"
                tools:layout_editor_absoluteX="205dp"
                tools:layout_editor_absoluteY="229dp" />

            <ImageView
                android:id="@+id/setting1_onoff"
                android:layout_width="117dp"
                android:layout_height="41dp"
                android:scaleType="centerInside"
                android:layout_marginTop="8dp"
                android:src="@drawable/onselected"
                tools:layout_editor_absoluteX="250dp"
                tools:layout_editor_absoluteY="229dp" />

            <ImageButton
                android:id="@+id/setting1_right"
                android:layout_width="45dp"
                android:layout_height="58dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/setting2_left"
                android:layout_width="45dp"
                android:layout_height="58dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_left"
                tools:layout_editor_absoluteX="205dp"
                tools:layout_editor_absoluteY="287dp" />

            <ImageView
                android:id="@+id/setting2_onoff"
                android:layout_width="117dp"
                android:layout_height="41dp"
                android:scaleType="centerInside"
                android:layout_marginTop="8dp"
                android:src="@drawable/onselected"
                tools:layout_editor_absoluteX="250dp"
                tools:layout_editor_absoluteY="287dp" />

            <ImageButton
                android:id="@+id/setting2_right"
                android:layout_width="45dp"
                android:layout_height="58dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_right"
                tools:layout_editor_absoluteX="367dp"
                tools:layout_editor_absoluteY="287dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/setting3_left"
                android:layout_width="45dp"
                android:layout_height="58dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_left"
                tools:layout_editor_absoluteX="205dp"
                tools:layout_editor_absoluteY="345dp" />

            <ImageView
                android:id="@+id/setting3_onoff"
                android:layout_width="117dp"
                android:layout_height="41dp"
                android:scaleType="centerInside"
                android:layout_marginTop="8dp"
                android:src="@drawable/onselected"
                tools:layout_editor_absoluteX="250dp"
                tools:layout_editor_absoluteY="345dp" />

            <ImageButton
                android:id="@+id/setting3_right"
                android:layout_width="45dp"
                android:layout_height="58dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_right"
                tools:layout_editor_absoluteX="367dp"
                tools:layout_editor_absoluteY="345dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintEnd_toStartOf="@+id/LinearLayout"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/setting4_left"
                android:layout_width="45dp"
                android:layout_height="58dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_left"
                tools:layout_editor_absoluteX="205dp"
                tools:layout_editor_absoluteY="404dp" />

            <ImageView
                android:id="@+id/setting4_onoff"
                android:layout_width="117dp"
                android:layout_height="41dp"
                android:scaleType="centerInside"
                android:layout_marginTop="8dp"
                android:src="@drawable/onselected"
                tools:layout_editor_absoluteX="250dp"
                tools:layout_editor_absoluteY="403dp" />

            <ImageButton
                android:id="@+id/setting4_right"
                android:layout_width="45dp"
                android:layout_height="58dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_right"
                tools:layout_editor_absoluteX="367dp"
                tools:layout_editor_absoluteY="403dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/setting5_left"
                android:layout_width="45dp"
                android:layout_height="58dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_left"
                tools:layout_editor_absoluteX="205dp"
                tools:layout_editor_absoluteY="462dp" />

            <ImageView
                android:id="@+id/setting5_onoff"
                android:layout_width="117dp"
                android:layout_height="41dp"
                android:scaleType="centerInside"
                android:layout_marginTop="8dp"
                android:src="@drawable/onselected" />

            <ImageButton
                android:id="@+id/setting5_right"
                android:layout_width="45dp"
                android:layout_height="58dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_right"
                tools:layout_editor_absoluteX="367dp"
                tools:layout_editor_absoluteY="462dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>